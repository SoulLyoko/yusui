{
  "name": "yusui-tools",
  "upperName": "YusuiTools",
  "version": "2.0.0-beta.94",
  "private": true,
  "description": "Collection of development tools",
  "author": "SoulLyoko<https://github.com/SoulLyoko>",
  "license": "MIT",
  "homepage": "https://github.com/SoulLyoko/yusui-tools#readme",
  "repository": "https://github.com/SoulLyoko/yusui-tools.git",
  "scripts": {
    "build": "esno scripts/build.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:init": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "ci": "pnpm lint && pnpm tc && pnpm test run && pnpm build && pnpm docs:build",
    "dev": "pnpm -F web dev",
    "dev:h5": "pnpm -F app dev:h5",
    "dev:mp": "pnpm -F app dev:mp-weixin",
    "docs:build": "vitepress build packages",
    "docs:dev": "vitepress dev packages --host",
    "docs:serve": "vitepress serve packages",
    "lint": "eslint .",
    "postinstall": "npx simple-git-hooks & esno scripts/postinstall.ts",
    "release": "esno scripts/release.ts",
    "remove:dist": "esno scripts/remove-dist.ts",
    "test": "vitest",
    "tc": "vue-tsc --noEmit",
    "upd": "taze major -r -I",
    "uvm": "pnpm -F app uvm"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.3",
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@dcloudio/types": "^3.4.0",
    "@dcloudio/uni-ui": "^1.4.28",
    "@guolao/vue-monaco-editor": "^1.3.0",
    "@iconify-json/ep": "^1.1.12",
    "@iconify/vue": "^4.1.1",
    "@smallwei/avue": "^3.2.21",
    "@types/fs-extra": "^11.0.3",
    "@types/lodash": "^4.14.200",
    "@types/lodash-es": "^4.17.10",
    "@types/node": "^18.18.6",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/shared": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "@vueuse/core": "~10.1.2",
    "async-validator": "^4.2.5",
    "axios": "^1.5.1",
    "bumpp": "^9.2.0",
    "c8": "^8.0.1",
    "conventional-changelog-cli": "^4.1.0",
    "element-plus": "^2.4.1",
    "eslint": "^8.51.0",
    "esno": "^0.17.0",
    "fs-extra": "^11.1.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.0.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3",
    "preact": "^10.18.1",
    "sass": "^1.69.4",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.11.4",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "uview-plus": "^3.1.38",
    "vite": "^4.5.0",
    "vite-plugin-inspect": "^0.7.40",
    "vitepress": "1.0.0-beta.7",
    "vitest": "^0.34.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.19"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "@types/lodash-es",
        "typescript",
        "@dcloudio/types",
        "@vue/composition-api",
        "monaco-editor"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no-install commitlint --edit $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
