{
  "name": "yusui-tools",
  "upperName": "YusuiTools",
  "type": "module",
  "version": "2.0.2",
  "private": true,
  "description": "Collection of development tools",
  "author": "SoulLyoko<https://github.com/SoulLyoko>",
  "license": "MIT",
  "homepage": "https://github.com/SoulLyoko/yusui-tools#readme",
  "repository": "https://github.com/SoulLyoko/yusui-tools.git",
  "scripts": {
    "build": "esno scripts/build.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:init": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "ci": "pnpm lint && pnpm tc && pnpm test run && pnpm build && pnpm remove:dist && pnpm docs:build",
    "dev": "pnpm -F web dev",
    "dev:h5": "pnpm -F app dev:h5",
    "dev:mp": "pnpm -F app dev:mp-weixin",
    "docs:build": "vitepress build packages",
    "docs:dev": "vitepress dev packages --host",
    "docs:serve": "vitepress serve packages",
    "lint": "eslint .",
    "postinstall": "npx simple-git-hooks",
    "release": "esno scripts/release.ts",
    "remove:dist": "esno scripts/remove-dist.ts",
    "test": "vitest",
    "tc": "vue-tsc --noEmit",
    "upd": "taze major -r -l -I"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.5",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@dcloudio/types": "^3.4.3",
    "@dcloudio/uni-ui": "^1.4.28",
    "@guolao/vue-monaco-editor": "^1.4.1",
    "@iconify-json/ep": "^1.1.14",
    "@iconify/vue": "^4.1.1",
    "@smallwei/avue": "^3.2.23",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.4",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/shared": "^3.3.7",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.4.0",
    "@vueuse/core": "^10.7.0",
    "async-validator": "^4.2.5",
    "axios": "^1.6.2",
    "bumpp": "^9.2.1",
    "c8": "^8.0.1",
    "conventional-changelog-cli": "^4.1.0",
    "element-plus": "^2.4.3",
    "eslint": "^8.55.0",
    "eslint-plugin-format": "^0.1.0",
    "esno": "^4.0.0",
    "fs-extra": "^11.2.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^9.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3",
    "preact": "^10.19.3",
    "sass": "^1.69.5",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.13.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3",
    "uview-plus": "^3.1.41",
    "vite": "^5.0.7",
    "vite-plugin-inspect": "^0.8.1",
    "vitepress": "1.0.0-rc.31",
    "vitest": "^1.0.4",
    "vue": "^3.3.7",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.25"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "@types/lodash-es",
        "typescript",
        "@dcloudio/types",
        "@vue/composition-api",
        "monaco-editor"
      ]
    }
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit $1",
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm tc"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  }
}
