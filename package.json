{
  "name": "yusui-tools",
  "upperName": "YusuiTools",
  "type": "module",
  "version": "3.0.0-beta.55",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "description": "Collection of development tools",
  "author": "SoulLyoko<https://github.com/SoulLyoko>",
  "license": "MIT",
  "homepage": "https://github.com/SoulLyoko/yusui-tools#readme",
  "repository": "https://github.com/SoulLyoko/yusui-tools.git",
  "scripts": {
    "build": "pnpm -F \"./packages/*\" build",
    "builds": "tsx scripts/build.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:init": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "docs:build": "vitepress build packages",
    "docs:dev": "vitepress dev packages --host",
    "docs:serve": "vitepress serve packages",
    "lint": "eslint .",
    "postinstall": "npx simple-git-hooks",
    "release": "tsx scripts/release.ts",
    "remove:dist": "tsx scripts/remove-dist.ts",
    "test": "vitest",
    "test:build": "pnpm remove:dist && pnpm lint && pnpm tc && pnpm test run && pnpm build && pnpm remove:dist && pnpm docs:build",
    "tc": "vue-tsc --noEmit",
    "upd": "taze major -r -l -I"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@guolao/vue-monaco-editor": "catalog:",
    "@iconify-json/ep": "catalog:",
    "@iconify/vue": "catalog:",
    "@types/fs-extra": "catalog:",
    "@types/lodash": "catalog:",
    "@types/lodash-es": "catalog:",
    "@types/node": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vue/test-utils": "catalog:",
    "@vue/tsconfig": "catalog:",
    "axios": "catalog:",
    "bumpp": "catalog:",
    "conventional-changelog-cli": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "fs-extra": "catalog:",
    "gulp": "catalog:",
    "gulp-autoprefixer": "catalog:",
    "gulp-clean-css": "catalog:",
    "gulp-sass": "catalog:",
    "husky": "catalog:",
    "jsdom": "catalog:",
    "lint-staged": "catalog:",
    "simple-git-hooks": "catalog:",
    "taze": "catalog:",
    "tsc-alias": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vite-plugin-inspect": "catalog:",
    "vitepress": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit $1",
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  }
}
