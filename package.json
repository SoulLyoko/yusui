{
  "name": "yusui-tools",
  "upperName": "YusuiTools",
  "version": "2.0.0-beta.28",
  "private": true,
  "description": "Collection of development tools",
  "author": "SoulLyoko<https://github.com/SoulLyoko>",
  "license": "MIT",
  "homepage": "https://github.com/SoulLyoko/yusui-tools#readme",
  "repository": "https://github.com/SoulLyoko/yusui-tools.git",
  "scripts": {
    "build": "esno scripts/build.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "ci": "pnpm typecheck && pnpm lint && pnpm test run && pnpm build && pnpm docs:build",
    "dev": "pnpm -F web dev",
    "dev:h5": "pnpm -F app dev:h5",
    "dev:mp": "pnpm -F app dev:mp-weixin",
    "docs:build": "vitepress build packages",
    "docs:dev": "vitepress dev packages --host",
    "docs:serve": "vitepress serve packages",
    "lint": "eslint .",
    "postinstall": "npx simple-git-hooks",
    "release": "bump && esno scripts/release.ts",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "uvm": "pnpm -F app uvm"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@dcloudio/types": "^3.2.11",
    "@dcloudio/uni-ui": "^1.4.26",
    "@iconify/vue": "4.0.0",
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@smallwei/avue": "^3.2.12",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.192",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.15.11",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/shared": "^3.2.47",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/core": "^9.13.0",
    "async-validator": "^4.2.5",
    "c8": "^7.13.0",
    "conventional-changelog-cli": "^2.2.2",
    "element-plus": "^2.3.3",
    "eslint": "^8.38.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3",
    "preact": "^10.13.2",
    "sass": "1.61.0",
    "simple-git-hooks": "^2.8.1",
    "tsc-alias": "^1.8.5",
    "typescript": "^5.0.4",
    "uview-plus": "^3.1.29",
    "vite": "^4.2.1",
    "vitepress": "1.0.0-alpha.65",
    "vitest": "^0.29.8",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.2.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "@types/lodash-es",
        "typescript",
        "@dcloudio/types",
        "@vue/composition-api",
        "monaco-editor"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
