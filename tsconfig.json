{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@yusui/form-design": ["packages/form-design/index.ts"],
      "@yusui/flow-design": ["packages/flow-design/index.ts"],
      "@yusui/flow-pages": ["packages/flow-pages/index.ts"],
      "@yusui/components": ["packages/components/index.ts"],
      "@yusui/composables": ["packages/composables/index.ts"],
      "@yusui/plugins": ["packages/plugins/index.ts"],
      "@yusui/types": ["packages/types/index.ts"],
      "@yusui/uni-composables": ["packages/uni-composables/index.ts"],
      "@yusui/utils": ["packages/utils/index.ts"],
      "@vue/shared": ["node_modules/@vue/shared"],
      "async-validator": ["node_modules/async-validator"],
      "preact": ["node_modules/preact"],
      "vue-router": ["node_modules/vue-router"]
    },
    "types": ["vitest/globals", "@dcloudio/types"]
  },
  "include": ["packages", "packages/.vitepress/**/*"],
  "exclude": ["node_modules", "**/node_modules", "**/dist", "playgrounds"]
}
