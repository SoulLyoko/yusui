{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@yusui/*": ["packages/*/index.ts"],
      "@vue/shared": ["node_modules/@vue/shared"],
      "async-validator": ["node_modules/async-validator"],
      "preact": ["node_modules/preact"],
      "vue-router": ["node_modules/vue-router"]
    },
    "types": [
      "vite/client",
      "vitest/globals",
      "element-plus/global",
      "@dcloudio/types",
      "./packages/types/avue"
    ],
    "allowJs": true
  },
  "include": ["packages", "packages/.vitepress/**/*"],
  "exclude": ["node_modules", "**/node_modules", "**/dist", "playgrounds", "packages/.vitepress/cache", "**/*.js"]
}
